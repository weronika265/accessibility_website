{% extends 'base.html.twig' %}

{% block title %}
    Rejestracja
{% endblock %}

{% block body %}
    <div id="user-actions">
        <a href="{{ url('home_index') }}">
            <img
                    id="logo"
                    src="{{ asset('img/logo_flat.png')}}"
                    alt="Logo strony - strona dostępności z emblematem 6 łez w kolorach tęczy."
            />
        </a>
    </div>
    <div id="reg-log">
        <h2>Rejestracja</h2>
        <form>
            {# TODO: Change email - add different class than in login #}
            <label for="email">Email</label><inline class="inline-form-text" style="margin-left: 3em;">Masz już konto? <strong><a href="{{ url('logowanie_index') }}">Zaloguj się</a></strong> </inline><br/>
            <input type="email" id="email" name="email"/><br/>
            <label for="password">Hasło</label><inline class="inline-form-text" style="margin-left: 11.5em;">Pokaż hasło</inline><br/>
            <input type="password" id="password" name="password"/><br/>
            <input type="submit" value="Zarejestruj się" class="submit-btn-space"/>
        </form>
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}