{% extends 'base.html.twig' %}

{% block title %}
    Logowanie
{% endblock %}

{% block body %}
    <div id="user-actions">
        <a href="{{ url('home_index') }}">
            <img
                    id="logo"
                    src="{{ asset('img/logo_flat.png')}}"
                    alt="Logo strony - strona dostępności z emblematem 6 łez w kolorach tęczy."
            />
        </a>
    </div>
    <div id="reg-log">
        <h2>Logowanie</h2>
        <form>
            <label for="email">Email</label><inline class="inline-form-text" style="margin-left: 3em;">Nie masz konta? <strong><a href="{{ url('rejestracja_index') }}">Zarejestruj się</a></strong> </inline><br/>
            <input type="email" id="email" name="email"/><br/>
            <label for="password">Hasło</label><inline class="inline-form-text" style="margin-left: 11.5em;">Pokaż hasło</inline><br/>
            <input type="password" id="password" name="password" style="margin-bottom: 0.5em;"/><br/>
            <inline class="inline-form-text qst-style">Zapomniałeś hasła?</inline><br/>
            <input type="submit" value="Zaloguj się" class="submit-btn-space"/>
        </form>
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}